#include<bits/stdc++.h>

using namespace std;
typedef long long ll;

int main()
{
int n;
cin>>n;
vector<int>num;
int temp;
for(int i = 0 ; i < n ; i++)
{
    cin>>temp;
    num.push_back(temp);
}
int c = 1;
for(int i = 0 ; i < n-1 ; i++)
{
    if (num[i] != num[i+1])
    {
        c++;
    }
}
cout<<c;

        return 0;
}
