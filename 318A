#include<bits/stdc++.h>
 
using namespace std;
 
int main()
{
    
   
 long long n , k ;
 cin>>n;
 cin>>k;
 if(k <= (n/2)+1 && k % 2 !=0 )
 {
     cout<<1+((k-1)*2);
 }
 else if(k <= (n/2) && k % 2 ==0)
 {
     cout<<1+((k-1)*2);
 }
 else
 {
     if(n%2 ==0)
     {
       cout<<(k-(n/2))*2;
     }
     else{
     cout<<(k-(n/2)-1)*2;
     }
 }
   ;
    
return 0;
}
